<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0</Version>
    <ToolCommandName>versionize</ToolCommandName>
    <PackAsTool>True</PackAsTool>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Authors>Christoph Walcher</Authors>
    <PackageTags>release;versioning;conventional;commit;git</PackageTags>
    <Description>Automatic versioning and CHANGELOG generation, using conventional commit messages.</Description>
    <PackageProjectUrl>https://github.com/saintedlama/versionize</PackageProjectUrl>
    <RepositoryUrl>https://github.com/saintedlama/versionize</RepositoryUrl>
    <LicenseUrl>https://raw.githubusercontent.com/saintedlama/versionize/master/LICENSE</LicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Colorful.Console" Version="1.2.9" />
    <PackageReference Include="LibGit2Sharp" Version="0.25.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.2.5" />
  </ItemGroup>

</Project>
